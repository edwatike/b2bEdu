# Local development environment for Next.js (DO NOT COMMIT env.local)

# Server-side backend base URL for Next.js Route Handlers (/api/proxy/*, /api/yandex/callback)
BACKEND_URL=http://127.0.0.1:8000

# Client-side backend base URL (if used in browser code)
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000

# Yandex OAuth (server-side)
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=

# Local callback (must be added to Yandex OAuth app settings)
YANDEX_REDIRECT_URI=http://localhost:3000/api/yandex/callback

# Space-separated scopes
YANDEX_SCOPE=login:info login:email

# Optional
MODERATOR_MASTER_EMAIL=edwatik@yandex.ru
